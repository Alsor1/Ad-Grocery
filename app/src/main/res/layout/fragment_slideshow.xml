<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="Manage Budget"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add to current budget section -->
    <TextView
        android:id="@+id/text_add_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to current budget"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_add_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="numberDecimal"
        android:hint="Enter amount"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/text_add_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_add_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/input_add_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtract from current budget section -->
    <TextView
        android:id="@+id/text_subtract_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subtract from current budget"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_subtract_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="numberDecimal"
        android:hint="Enter amount"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/text_subtract_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_subtract_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/input_subtract_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Change budget reset day section -->
    <TextView
        android:id="@+id/text_reset_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Change budget reset day"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_subtract_budget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_reset_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="number"
        android:hint="Enter date (dd/mm)"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/text_reset_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_submit_reset_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Submit"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/input_reset_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="160dp"
        android:text="MAXIMUM ECONOMY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_submit_reset_day" />

</androidx.constraintlayout.widget.ConstraintLayout>
